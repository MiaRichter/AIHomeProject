<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIHomeProject.Pages.ComponentFormPage"
             Title="ComponentFormPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Entry Placeholder="ID компонента" Text="{Binding CurrentComponent.ComponentId}" />
            <Entry Placeholder="Название" Text="{Binding CurrentComponent.Name}" />
            <Editor Placeholder="Описание" Text="{Binding CurrentComponent.Description}" 
                   HeightRequest="100" />
            <Entry Placeholder="Тип компонента" Text="{Binding CurrentComponent.ComponentType}" />
            <Entry Placeholder="Местоположение" Text="{Binding CurrentComponent.Location}" />

            <Button Text="Сохранить" Command="{Binding SaveCommand}" />
        </StackLayout>
    </ScrollView>
</ContentPage>